<div class='modal-header'>
  <div class='modal-content'>
    <!-- modal header -->
    <div class='modal-header'>

      <div class='modal-title'>

      </div>

    </div>

    <!-- modal body -->
    <div class='modal-body'>

      <h5 id='post-display-name'>Post Details:</h5>

      <div class='modal-post-details'>

      </div>

    </div>

    <!-- modal footer -->
    <div class='modal-footer'>

      <form class='new-reply'>

        <!-- reply content field -->
        <div class='form-group'>
          <%# <label for='exampleTextarea'>Interview details:</label>%>
          <textarea class='form-control' id='reply-content' rows='5' placeHolder='Reply to this post.'></textarea>
        </div>

        <!-- submit button -->
        <input type='hidden' id='reply-user' name='user' value='<%if(user){%><%=user._id%><%}%>'>
        <button type='submit' class='btn btn-primary' id='submit-reply'>Post Reply</button>

      <button type='button' class='btn btn-secondary' data-dismiss='modal'>Close</button>
    </form>

    </div>
  </div>
</div>
